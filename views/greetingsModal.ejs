<!-- Modal -->
<style>
  .modal{
    color:black;
  }
</style>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Изпрати Поздрав</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="greet_username">Кой поздравяваш?</label>
            <input type="text" class="form-control" id="greet_username" aria-describedby="emailHelp" placeholder="Въведи неговият USERNAME">
          </div>
          <div class="form-group">
            <label for="greet_message">Какво ще му пожелаееш?</label>
            <input type="text" class="form-control" id="greet_message" placeholder="Твоето пожелание..?">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Затвори след като изпратиш поздрав</button>
        <button type="button" class="btn btn-primary" id="send_greet">Изпрати</button>
      </div>
    </div>
  </div>
</div>
<script src="public/js/greetings.js"></script>
